@model TechJobs.Models.Job

@{
//  #2.1- declare the ViewModel (outside of this @{ } block) DONE
}

<table class="job-listing">
    @{
//  #2.2 - display the job fields, one per row (outside of this @{ } block)
    }
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>

